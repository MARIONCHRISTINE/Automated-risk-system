    <script>
        // Tab switching functionality
        function showTab(tabName) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.style.display = 'none');
            
            // Remove active class from all buttons
            const buttons = document.querySelectorAll('.nav-tabs button');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName + '-tab').style.display = 'block';
            event.target.classList.add('active');
            
            // Initialize charts when analytics tab is shown
            if (tabName === 'analytics') {
                initializeCharts();
            }
        }
        
        // Analytics tab switching
        function showAnalyticsTab(tabName) {
            // Hide all analytics tabs
            const tabs = document.querySelectorAll('.analytics-tab-content');
            tabs.forEach(tab => tab.style.display = 'none');
            
            // Remove active class from all buttons
            const buttons = document.querySelectorAll('.tab-button');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName + '-analytics').style.display = 'block';
            event.target.classList.add('active');
            
            // Initialize specific chart
            switch(tabName) {
                case 'risk-level':
                    initRiskLevelChart();
                    break;
                case 'departments':
                    initDepartmentChart();
                    break;
                case 'categories':
                    initCategoriesChart();
                    break;
                case 'treatment':
                    initTreatmentChart();
                    break;
                case 'owners':
                    initOwnersChart();
                    break;
                case 'monitoring':
                    initMonitoringChart();
                    break;
            }
        }
        
        // Initialize all charts
        function initializeCharts() {
            initRiskLevelChart();
        }
        
        // Risk Level Chart
        function initRiskLevelChart() {
            const ctx = document.getElementById('riskLevelChart').getContext('2d');
            
            // Check if chart already exists and destroy it
            if (window.riskLevelChart) {
                window.riskLevelChart.destroy();
            }
            
            window.riskLevelChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Critical', 'High', 'Medium', 'Low'],
                    datasets: [{
                        data: [
                            <?php echo $stats['critical_risks']; ?>,
                            <?php echo $stats['high_risks']; ?>,
                            <?php echo $stats['medium_risks']; ?>,
                            <?php echo $stats['low_risks']; ?>
                        ],
                        backgroundColor: ['#d32f2f', '#f57c00', '#fbc02d', '#388e3c']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Risk Level Distribution'
                        },
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
        }
        
        // Department Chart
        function initDepartmentChart() {
            const ctx = document.getElementById('departmentChart').getContext('2d');
            
            // Check if chart already exists and destroy it
            if (window.departmentChart) {
                window.departmentChart.destroy();
            }
            
            window.departmentChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: <?php echo json_encode(array_column($dept_data, 'department')); ?>,
                    datasets: [{
                        label: 'Number of Risks',
                        data: <?php echo json_encode(array_column($dept_data, 'count')); ?>,
                        backgroundColor: '#3949ab'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Risks by Department'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
        
        // Categories Chart
        function initCategoriesChart() {
            const ctx = document.getElementById('categoriesChart').getContext('2d');
            
            // Check if chart already exists and destroy it
            if (window.categoriesChart) {
                window.categoriesChart.destroy();
            }
            
            window.categoriesChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: <?php echo json_encode(array_column($categories_data, 'category')); ?>,
                    datasets: [{
                        data: <?php echo json_encode(array_column($categories_data, 'count')); ?>,
                        backgroundColor: [
                            '#3949ab', '#1a237e', '#5c6bc0', '#7986cb', '#9fa8da',
                            '#d32f2f', '#f57c00', '#fbc02d', '#388e3c', '#00796b',
                            '#0288d1', '#7b1fa2', '#c2185b', '#5d4037', '#616161'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Risk Categories Distribution'
                        },
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
        }
        
        // Treatment Progress Chart
        function initTreatmentChart() {
            const ctx = document.getElementById('treatmentChart').getContext('2d');
            
            // Check if chart already exists and destroy it
            if (window.treatmentChart) {
                window.treatmentChart.destroy();
            }
            
            window.treatmentChart = new Chart(ctx, {
                type: 'bar',
                data: {
