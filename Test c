        <div id="performance-tab" class="tab-content" style="display: none;">
            <div class="card">
                <h2>Department Performance Metrics</h2>
                <div class="info-box">
                    <p>This view shows how each department is performing in terms of risk management, including completion rates and average risk ratings.</p>
                </div>
                
                <div class="table-responsive">
                    <table class="performance-table">
                        <thead>
                            <tr>
                                <th>Department</th>
                                <th>Total Risks</th>
                                <th>Completion Rate</th>
                                <th>Overdue Risks</th>
                                <th>Avg. Residual Rating</th>
                                <th>Last Activity</th>
                                <th>Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <?php foreach ($department_performance as $dept): 
                                $completion_rate = round(($dept['completed_risks'] / $dept['total_risks']) * 100, 1);
                                $overdue_rate = round(($dept['overdue_risks'] / $dept['total_risks']) * 100, 1);
                                
                                // Calculate performance score
                                $performance_score = $completion_rate - ($overdue_rate * 2) - ($dept['avg_residual_rating'] * 5);
                                $performance_class = 'level-low';
                                $performance_label = 'Excellent';
                                
                                if ($performance_score < 50) {
                                    $performance_class = 'level-critical';
                                    $performance_label = 'Poor';
                                } elseif ($performance_score < 70) {
                                    $performance_class = 'level-high';
                                    $performance_label = 'Fair';
                                } elseif ($performance_score < 85) {
                                    $performance_class = 'level-medium';
                                    $performance_label = 'Good';
                                }
                            ?>
                                <tr>
                                    <td><?php echo htmlspecialchars($dept['department']); ?></td>
                                    <td><?php echo $dept['total_risks']; ?></td>
                                    <td>
                                        <div><?php echo $completion_rate; ?>%</div>
                                        <div class="performance-bar">
                                            <div class="performance-fill" style="width: <?php echo $completion_rate; ?>%;"></div>
                                        </div>
                                    </td>
                                    <td><?php echo $dept['overdue_risks']; ?> (<?php echo $overdue_rate; ?>%)</td>
                                    <td><?php echo round($dept['avg_residual_rating'], 1); ?></td>
                                    <td><?php echo date('M d, Y', strtotime($dept['last_activity'])); ?></td>
                                    <td>
                                        <span class="risk-level <?php echo $performance_class; ?>">
                                            <?php echo $performance_label; ?>
                                        </span>
                                    </td>
                                </tr>
                            <?php endforeach; ?>
                        </tbody>
                    </table>
                </div>
            </div>
            
