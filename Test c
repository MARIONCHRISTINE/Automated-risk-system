        // Aging Analytics Chart
        function initAgingAnalyticsChart() {
            const ctx = document.getElementById('agingAnalyticsChart').getContext('2d');
            
            // Check if chart already exists and destroy it
            if (window.agingAnalyticsChart) {
                window.agingAnalyticsChart.destroy();
            }
            
            // Prepare aging data
            const agingData = {
                'Critical (>90 days)': <?php 
                    $critical_aging = array_filter($risk_aging, function($risk) {
                        return $risk['aging_category'] == 'Critical';
                    });
                    echo count($critical_aging);
                ?>,
                'High (61-90 days)': <?php 
                    $high_aging = array_filter($risk_aging, function($risk) {
                        return $risk['aging_category'] == 'High';
                    });
                    echo count($high_aging);
                ?>,
                'Medium (31-60 days)': <?php 
                    $medium_aging = array_filter($risk_aging, function($risk) {
                        return $risk['aging_category'] == 'Medium';
                    });
                    echo count($medium_aging);
                ?>,
                'Low (30 days)': <?php 
                    $low_aging = array_filter($risk_aging, function($risk) {
                        return $risk['aging_category'] == 'Low';
                    });
                    echo count($low_aging);
                ?>
            };
            
            window.agingAnalyticsChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(agingData),
                    datasets: [{
                        data: Object.values(agingData),
                        backgroundColor: [
                            '#d32f2f', // Critical
                            '#f57c00', // High
                            '#fbc02d', // Medium
                            '#388e3c'  // Low
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Risk Aging Distribution'
                        },
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
        }
        
        // Performance Comparison Chart
        document.addEventListener('DOMContentLoaded', function() {
            const performanceCtx = document.getElementById('performanceComparisonChart');
            if (performanceCtx) {
                // Prepare performance data
                const departments = <?php echo json_encode(array_column($department_performance, 'department')); ?>;
                const completionRates = <?php echo json_encode(array_map(function($dept) {
                    return round(($dept['completed_risks'] / $dept['total_risks']) * 100, 1);
                }, $department_performance)); ?>;
                const overdueRates = <?php echo json_encode(array_map(function($dept) {
                    return round(($dept['overdue_risks'] / $dept['total_risks']) * 100, 1);
                }, $department_performance)); ?>;
                const residualRatings = <?php echo json_encode(array_column($department_performance, 'avg_residual_rating')); ?>;
                
                new Chart(performanceCtx, {
                    type: 'radar',
                    data: {
                        labels: departments,
                        datasets: [
                            {
                                label: 'Completion Rate',
                                data: completionRates,
                                backgroundColor: 'rgba(56, 142, 60, 0.2)',
                                borderColor: '#388e3c',
                                pointBackgroundColor: '#388e3c'
                            },
                            {
                                label: 'Overdue Rate (Inverted)',
                                data: overdueRates.map(rate => 100 - rate),
                                backgroundColor: 'rgba(211, 47, 47, 0.2)',
                                borderColor: '#d32f2f',
                                pointBackgroundColor: '#d32f2f'
                            },
                            {
                                label: 'Risk Rating (Inverted)',
                                data: residualRatings.map(rating => 25 - rating),
                                backgroundColor: 'rgba(57, 73, 171, 0.2)',
                                borderColor: '#3949ab',
                                pointBackgroundColor: '#3949ab'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            title: {
                                display: true,
                                text: 'Department Performance Comparison'
                            }
                        },
                        scales: {
                            r: {
                                beginAtZero: true,
                                max: 100
                            }
                        }
                    }
                });
            }
        });
        
        // Heatmap Details Modal
        const heatmapModal = document.getElementById('heatmap-modal');
        const riskDetailsModal = document.getElementById('risk-details-modal');
        
        const closeButtons = document.getElementsByClassName("close");
        for (let i = 0; i < closeButtons.length; i++) {
            closeButtons[i].onclick = function() {
                heatmapModal.style.display = "none";
                riskDetailsModal.style.display = "none";
            }
        }
        
        window.onclick = function(event) {
            if (event.target == heatmapModal) {
                heatmapModal.style.display = "none";
            }
            if (event.target == riskDetailsModal) {
                riskDetailsModal.style.display = "none";
            }
        }
        
        // Show heatmap details
        function showHeatmapDetails(probability, impact) {
            // Get risks for this cell
            const risksInCell = <?php echo json_encode($heatmap_data); ?>[probability][impact];
            
            let detailsHTML = `<h3>Risks with Probability: ${probability} and Impact: ${impact}</h3>`;
            
            if (risksInCell.length === 0) {
                detailsHTML += '<p>No risks found in this category.</p>';
            } else {
                detailsHTML += '<div class="risk-details-list">';
                risksInCell.forEach(risk => {
                    detailsHTML += `
                        <div class="risk-detail">
                            <h4>${risk.risk_name} (${risk.risk_id_number})</h4>
                            <p><strong>Department:</strong> ${risk.department}</p>
                            <p><strong>Risk Level:</strong> ${risk.risk_level}</p>
                            <p><strong>Status:</strong> ${risk.status}</p>
                            <p><strong>Risk Owner:</strong> ${risk.owner_name}</p>
                            <a href="view_risk.php?id=${risk.id}" class="btn">View Details</a>
                        </div>
                    `;
                });
                detailsHTML += '</div>';
            }
            
            document.getElementById('heatmap-details').innerHTML = detailsHTML;
            heatmapModal.style.display = "block";
        }
        
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Overview tab filters
            const departmentFilter = document.getElementById('department-filter');
            const riskLevelFilter = document.getElementById('risk-level-filter');
            const statusFilter = document.getElementById('status-filter');
            const searchFilter = document.getElementById('search-filter');
            const risksTable = document.getElementById('risks-table');
            
            function filterTable() {
                const departmentValue = departmentFilter ? departmentFilter.value.toLowerCase() : '';
                const riskLevelValue = riskLevelFilter ? riskLevelFilter.value.toLowerCase() : '';
                const statusValue = statusFilter ? statusFilter.value.toLowerCase() : '';
                const searchValue = searchFilter ? searchFilter.value.toLowerCase() : '';
                
                const rows = risksTable.getElementsByTagName('tr');
                
                for (let i = 1; i < rows.length; i++) {
                    const departmentCell = rows[i].getElementsByTagName('td')[2];
                    const riskLevelCell = rows[i].getElementsByTagName('td')[3];
                    const statusCell = rows[i].getElementsByTagName('td')[5];
                    const nameCell = rows[i].getElementsByTagName('td')[1];
                    
                    const departmentText = departmentCell.textContent || departmentCell.innerText;
                    const riskLevelText = riskLevelCell.textContent || riskLevelCell.innerText;
                    const statusText = statusCell.textContent || statusCell.innerText;
                    const nameText = nameCell.textContent || nameCell.innerText;
                    
                    if (
                        (departmentValue === '' || departmentText.toLowerCase().includes(departmentValue)) &&
                        (riskLevelValue === '' || riskLevelText.toLowerCase().includes(riskLevelValue)) &&
                        (statusValue === '' || statusText.toLowerCase().includes(statusValue)) &&
                        (searchValue === '' || nameText.toLowerCase().includes(searchValue))
                    ) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
            
            if (departmentFilter) departmentFilter.addEventListener('change', filterTable);
            if (riskLevelFilter) riskLevelFilter.addEventListener('change', filterTable);
            if (statusFilter) statusFilter.addEventListener('change', filterTable);
            if (searchFilter) searchFilter.addEventListener('input', filterTable);
            
            // Violations tab filters
            const violationDepartmentFilter = document.getElementById('violation-department-filter');
            const violationLevelFilter = document.getElementById('violation-level-filter');
            const violationOwnerFilter = document.getElementById('violation-owner-filter');
            const violationSearchFilter = document.getElementById('violation-search-filter');
            const violationsTable = document.getElementById('violations-table');
            
            function filterViolationsTable() {
                const departmentValue = violationDepartmentFilter ? violationDepartmentFilter.value.toLowerCase() : '';
                const levelValue = violationLevelFilter ? violationLevelFilter.value.toLowerCase() : '';
                const ownerValue = violationOwnerFilter ? violationOwnerFilter.value.toLowerCase() : '';
                const searchValue = violationSearchFilter ? violationSearchFilter.value.toLowerCase() : '';
                
                const rows = violationsTable.getElementsByTagName('tr');
                
                for (let i = 1; i < rows.length; i++) {
                    const departmentCell = rows[i].getElementsByTagName('td')[2];
                    const levelCell = rows[i].getElementsByTagName('td')[3];
                    const ownerCell = rows[i].getElementsByTagName('td')[6];
                    const nameCell = rows[i].getElementsByTagName('td')[1];
                    
                    const departmentText = departmentCell.textContent || departmentCell.innerText;
                    const levelText = levelCell.textContent || levelCell.innerText;
                    const ownerText = ownerCell.textContent || ownerCell.innerText;
                    const nameText = nameCell.textContent || nameCell.innerText;
                    
                    if (
                        (departmentValue === '' || departmentText.toLowerCase().includes(departmentValue)) &&
                        (levelValue === '' || levelText.toLowerCase().includes(levelValue)) &&
                        (ownerValue === '' || ownerText.toLowerCase().includes(ownerValue)) &&
                        (searchValue === '' || nameText.toLowerCase().includes(searchValue))
                    ) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
            
            if (violationDepartmentFilter) violationDepartmentFilter.addEventListener('change', filterViolationsTable);
            if (violationLevelFilter) violationLevelFilter.addEventListener('change', filterViolationsTable);
            if (violationOwnerFilter) violationOwnerFilter.addEventListener('change', filterViolationsTable);
            if (violationSearchFilter) violationSearchFilter.addEventListener('input', filterViolationsTable);
        });
        
        // Reset filters function
        function resetFilters() {
            const filters = ['department-filter', 'risk-level-filter', 'status-filter', 'search-filter'];
            filters.forEach(filterId => {
                const filter = document.getElementById(filterId);
                if (filter) {
                    filter.value = '';
                    filter.dispatchEvent(new Event('change'));
                }
            });
        }
        
        // Export data function
        function exportData(format) {
            // In a real implementation, this would trigger a download
            alert(`Exporting data in ${format.toUpperCase()} format. This would download a file in a real implementation.`);
        }
        
        // Escalate violation function
        function escalateViolation(riskId) {
            if (confirm('Are you sure you want to escalate this violation to senior management?')) {
                // In a real implementation, this would send a notification
                alert(`Violation ${riskId} has been escalated to senior management.`);
            }
        }
        
        // Escalate risk function
        function escalateRisk(riskId) {
            if (confirm('Are you sure you want to escalate this risk to senior management?')) {
                // In a real implementation, this would send a notification
                alert(`Risk ${riskId} has been escalated to senior management.`);
            }
        }
        
        // Load more activities function
        function loadMoreActivities() {
            // In a real implementation, this would load more activities from the server
            alert('Loading more activities. This would fetch additional activities from the server in a real implementation.');
        }
