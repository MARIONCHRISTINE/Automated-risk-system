        // Heatmap Chart
        function initHeatmapChart() {
            const ctx = document.getElementById('heatmapChart').getContext('2d');
            
            // Check if chart already exists and destroy it
            if (window.heatmapChart) {
                window.heatmapChart.destroy();
            }
            
            // Prepare data for heatmap
            const heatmapData = [];
            for (let prob = 1; prob <= 5; prob++) {
                for (let impact = 1; impact <= 5; impact++) {
                    const count = <?php echo json_encode($heatmap_data); ?>[prob][impact].length;
                    heatmapData.push({
                        x: impact,
                        y: prob,
                        v: count
                    });
                }
            }
            
            window.heatmapChart = new Chart(ctx, {
                type: 'bubble',
                data: {
                    datasets: [{
                        label: 'Risk Count',
                        data: heatmapData,
                        backgroundColor: function(context) {
                            const value = context.dataset.data[context.dataIndex];
                            const score = value.x * value.y;
                            if (score > 20) return 'rgba(245, 198, 203, 0.7)';
                            if (score > 12) return 'rgba(248, 215, 218, 0.7)';
                            if (score > 6) return 'rgba(255, 243, 205, 0.7)';
                            return 'rgba(212, 237, 218, 0.7)';
                        }
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Risk Distribution by Probability and Impact'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `Count: ${context.raw.v}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Impact'
                            },
                            min: 0.5,
                            max: 5.5,
                            ticks: {
                                stepSize: 1
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Probability'
                            },
                            min: 0.5,
                            max: 5.5,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }
        
        // Heatmap Details Modal
        const modal = document.getElementById('heatmap-modal');
        const span = document.getElementsByClassName("close")[0];
        
        // Show heatmap details
        function showHeatmapDetails(probability, impact) {
            // Get risks for this cell
            const risksInCell = <?php echo json_encode($heatmap_data); ?>[probability][impact];
            
            let detailsHTML = `<h3>Risks with Probability: ${probability} and Impact: ${impact}</h3>`;
            
            if (risksInCell.length === 0) {
                detailsHTML += '<p>No risks found in this category.</p>';
            } else {
                detailsHTML += '<div class="risk-details-list">';
                risksInCell.forEach(risk => {
                    detailsHTML += `
                        <div class="risk-detail">
                            <h4>${risk.risk_name} (${risk.risk_id_number})</h4>
                            <p><strong>Department:</strong> ${risk.department}</p>
                            <p><strong>Risk Level:</strong> ${risk.risk_level}</p>
                            <p><strong>Status:</strong> ${risk.status}</p>
                            <p><strong>Risk Owner:</strong> ${risk.owner_name}</p>
                            <a href="view_risk.php?id=${risk.id}" class="btn">View Details</a>
                        </div>
                    `;
                });
                detailsHTML += '</div>';
            }
            
            document.getElementById('heatmap-details').innerHTML = detailsHTML;
            modal.style.display = "block";
        }
        
        // Close modal
        span.onclick = function() {
            modal.style.display = "none";
        }
        
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const departmentFilter = document.getElementById('department-filter');
            const riskLevelFilter = document.getElementById('risk-level-filter');
            const statusFilter = document.getElementById('status-filter');
            const searchFilter = document.getElementById('search-filter');
            const risksTable = document.getElementById('risks-table');
            
            function filterTable() {
                const departmentValue = departmentFilter.value.toLowerCase();
                const riskLevelValue = riskLevelFilter.value.toLowerCase();
                const statusValue = statusFilter.value.toLowerCase();
                const searchValue = searchFilter.value.toLowerCase();
                
                const rows = risksTable.getElementsByTagName('tr');
                
                for (let i = 1; i < rows.length; i++) {
                    const departmentCell = rows[i].getElementsByTagName('td')[2];
                    const riskLevelCell = rows[i].getElementsByTagName('td')[3];
                    const statusCell = rows[i].getElementsByTagName('td')[5];
                    const nameCell = rows[i].getElementsByTagName('td')[1];
                    
                    const departmentText = departmentCell.textContent || departmentCell.innerText;
                    const riskLevelText = riskLevelCell.textContent || riskLevelCell.innerText;
                    const statusText = statusCell.textContent || statusCell.innerText;
                    const nameText = nameCell.textContent || nameCell.innerText;
                    
                    if (
                        (departmentValue === '' || departmentText.toLowerCase().includes(departmentValue)) &&
                        (riskLevelValue === '' || riskLevelText.toLowerCase().includes(riskLevelValue)) &&
                        (statusValue === '' || statusText.toLowerCase().includes(statusValue)) &&
                        (searchValue === '' || nameText.toLowerCase().includes(searchValue))
                    ) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
            
            departmentFilter.addEventListener('change', filterTable);
            riskLevelFilter.addEventListener('change', filterTable);
            statusFilter.addEventListener('change', filterTable);
            searchFilter.addEventListener('input', filterTable);
            
            // Initialize heatmap chart when heatmap tab is shown
            document.querySelector('button[onclick="showTab(\'heatmap\')"]').addEventListener('click', function() {
                setTimeout(initHeatmapChart, 100);
            });
        });
    </script>
</body>
</html>
